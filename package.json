{
  "version": "0.1.0-beta.0",
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "clean": "rm -rf lib",
    "start": "esbuild src/index.ts --watch --target=chrome58,firefox57,safari11,edge16 --outfile=lib/index.js",
    "ts-types": "tsc --emitDeclarationOnly --outDir lib",
    "build": "npm run clean && esbuild src/index.ts --minify --sourcemap --target=chrome58,firefox57,safari11,edge16 --outfile=lib/index.js && npm run ts-types",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "browser": {
    "path": "path-browserify"
  },
  "peerDependencies": {},
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@authorizerdev/authorizer-js",
  "author": "Lakhan Samani",
  "size-limit": [
    {
      "path": "lib/index.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.1",
    "esbuild": "^0.12.17",
    "husky": "^7.0.1",
    "size-limit": "^5.0.1",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "rimraf": "^2.7.1"
  }
}
